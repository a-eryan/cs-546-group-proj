<script src="/public/js/reviewEdit.js"></script>
<div class="edit-review-container">
  <h1>Edit Review</h1>
  <h2>for {{spot.title}}</h2>
  
  {{#if error}}
    <div class="error-message">{{error}}</div>
  {{/if}}
  
<form id="editReviewForm" action="/reviews/{{review._id}}/edit" method="POST" class="review-form">
    <input type="hidden" name="spotId" value="{{spot._id}}">
    
    <div class="form-group">
      <label for="title">Title:</label>
      <input type="text" id="title" name="title" value="{{review.title}}" required>
    </div>
    
    <div class="form-group">
      <label for="content">Review:</label>
      <textarea id="content" name="content" required>{{review.content}}</textarea>
    </div>
    
    <div class="form-group">
      <label for="rating">Rating:</label>
      <input type="range" id="rating" name="rating" min="1" max="5" value="{{review.rating}}" required>
      <span id="ratingDisplay">{{review.rating}}</span> Stars
    </div>
    
    <div class="form-actions">
      <button type="submit">Update Review</button>
      <a href="/studyspots/{{spot._id}}" class="cancel-link">Cancel</a>
    </div>
  </form>
</div>