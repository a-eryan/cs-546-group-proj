<form id = "createForumForm" action="/forums/create" method="POST">
	{{#if error}}
		<div class="error-message">{{error}}</div>
	{{/if}}

	<div class="forum-header">
		<h1>Create a New Forum Post</h1>
		<a href="/forums" class="back-button">Back to Forums</a>
	</div>
	
	<div class="forum-form">
		<div class="form-group">
			<label for="title">Title:</label>
			<input type="text" id="title" name="title" value="{{forum_title}}" required>
		</div>
			
		<div class="form-group">
			<label for="content">Description:</label>
			<textarea id="content" name="content" required>{{content}}</textarea>
		</div>
	
		<button class="new-forum-button" type="submit">Create Post</button>
	</div>
</form>

<script src="/public/js/forumCreate.js"></script>