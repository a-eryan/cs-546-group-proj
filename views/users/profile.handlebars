<div class="profile-container">
	<div class = "profile-header-container">
		<h1>Welcome, {{user.email}}</h1>
		
		<div class="profile-actions">
			<a href="/logout" class="logout-button">Log Out</a>
			<a href="/profile/avatar" class="profile-picture-button">Change Profile Picture</a>
		</div>
	</div>

	<section class="profile-section">
		<h3>🎖️ Achievements</h3>
		<p>Earn achievements for uploading and reviewing 3 study spots and commenting on forum posts 5 times!</p>
		<ul>
			{{#each user.achievements}}
				<li>{{this}}</li>
			{{else}}
				<li>No achievements yet.</li>
			{{/each}}
		</ul>
	</section>

	<section class="profile-section">
		<h3>📍 Your Uploaded Study Spots</h3>
			<ul>
				{{#each user.uploadedSpots}}
					<li><a href="/studyspots/{{this._id}}">{{this.title}}</a></li>
				{{else}}
					<li>You haven’t posted any study spots.</li>
				{{/each}}
		</ul>
	</section>

	<section class="profile-section">
		<h3>💬 Your Forum Posts</h3>
		<ul>
			{{#each forums}}
				<li><a href="/forums/{{this._id}}">{{this.title}}</a></li>
			{{else}}
				<li>No forum posts yet.</li>
			{{/each}}
		</ul>
	</section>
</div>